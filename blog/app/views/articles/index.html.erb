<h1> All articles </h1>
<p>
<%= link_to "Create new article", new_article_path %>
</p>  
<table>
  <thead>
    <th>title</th>
    <th>description</th>
  </thead>
    
  <tbody>

    <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
     <td><%= link_to 'Show', article %></td>
     <td><%= link_to 'Edit', edit_article_path(article.id) %></td>

  
    </tr>
    <% end %>
  </tbody>  
</table>  